{% extends '::base.html.twig' %}

{% block pageTitle %}Patient Details{% endblock %}

{% block body %}

<div class="row">

    <div class="col-md-12">

        <div class="box">

            <div class="box-header">
                <h3 class="box-title">{{ patient.name }}</h3>
            </div>

            <div class="box-body">

                <div class="nav-tabs-custom">

                    <ul class="nav nav-tabs nav-tabs-lg">
                        <li class="active"><a href="#tab_1" data-toggle="tab">Info</a></li>
                        <li><a href="#tab_2" data-toggle="tab">History</a></li>
                    </ul>

                    <div class="tab-content">

                        <div class="tab-pane active" id="tab_1">

                            <div class="row">

                                <div class="col-md-6">

                                    <table class="table table-condensed no-border">
                                        <tbody>
                                        <tr>
                                            <th width="30%">Name</th>
                                            <td width="70%">{{ patient.name }}</td>
                                        </tr>
                                        <tr>
                                            <th>Husband Name</th>
                                            <td>{{ patient.husbandName }}</td>
                                        </tr>
                                        <tr>
                                            <th>Age</th>
                                            <td>{{ patient.age }}</td>
                                        </tr>
                                        </tbody>
                                    </table>

                                </div>

                            </div>

                        </div>

                        <div class="tab-pane" id="tab_2">

                            <div class="row">

                                <div class="col-md-6">

                                </div>

                            </div>

                        </div>

                        <div class="tab-pane" id="tab_3">

                            <div class="row">

                                <div class="col-md-12">

                                    <div class="clearfix"></div>

                                    <div class="well" style="min-height: 300px; height: 1000px; overflow: scroll; font-size: 18px;">
                                        Some content here 3
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

{% endblock %}